{
  "name": "root",
  "description": "⚒️ An example SDK for building applications",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "yarn": "^1.22.0",
    "node": ">=12.9.0"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ]
  },
  "scripts": {
    "dapp": "yarn workspace dapp",
    "backend": "yarn workspace backend",
    "library": "yarn workspace library",
    "prepare": "husky install",
    "lint": "yarn eslint './**/*.{js,ts,tsx}' --fix",
    "prettier": "prettier '.' --write",
    "test": "yarn library test",
    "start:dapp": "yarn dapp start",
    "build:dapp": "yarn dapp build"
  },
  "dependencies": {
    "@types/node": "^16.3.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "git-format-staged": "^2.1.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
